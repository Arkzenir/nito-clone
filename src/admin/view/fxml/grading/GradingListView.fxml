	<columns>

		<TableColumn text="Select" fx:id="select">
			<cellValueFactory>
				<PropertyValueFactory property="select" />
			</cellValueFactory>
		</TableColumn>

		<TableColumn text="Full Name" fx:id="name">
			<cellValueFactory>
				<PropertyValueFactory property="name" />
			</cellValueFactory>
		</TableColumn>

		<TableColumn text="ID" fx:id="idNumber">
			<cellValueFactory>
				<PropertyValueFactory property="idNumber" />
			</cellValueFactory>
		</TableColumn>

		<TableColumn text="Question 1" fx:id="q1">
			<columns>
				<TableColumn text="Part 1" />
				<TableColumn text="Part 2" />
			</columns>
		</TableColumn>

		<TableColumn text="Question 2" fx:id="q2">
			<columns>
				<TableColumn text="Part 1" />
				<TableColumn text="Part 2" />
			</columns>
		</TableColumn>

		<TableColumn text="Total Points (100 points)"
			fx:id="total">
			<cellValueFactory>
				<PropertyValueFactory property="grade" />
			</cellValueFactory>
		</TableColumn>
	</columns>

	<items>
		<FXCollections fx:factory="observableArrayList">
			<ExamineeTableItem name="Mokhlaroyim raupova"

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import net.miginfocom.layout.AC?>

<Dialog headerText="Create a new exam" title="New Exam" xmlns:fx="http://javafx.com/fxml/1">
	<dialogPane>
		<DialogPane prefHeight="200" prefWidth="500">
			<!-- Dialog icon -->
	 	   <!-- Dialog content -->
		    <content>
			    <MigPane cols="[][grow][][grow][]" rows="push[]push[]push">
					<Label text="Title:" MigPane.cc="left"/>
					<TextField MigPane.cc="grow, span, wrap"/>
					
					<Label text="Length:" MigPane.cc="left"/>
					<Spinner MigPane.cc="grow, width 100"/>
					<Label text="hour(s)" />
					<Spinner MigPane.cc="grow, width 100"/>
					<Label text="minute(s)" />
				</MigPane>
			</content>
			
			<!-- Dialog buttons -->
			<buttonTypes>
				<ButtonType fx:constant="OK"/>
				<ButtonType fx:constant="CANCEL" />
			</buttonTypes>
		</DialogPane>
	</dialogPane>
</Dialog>
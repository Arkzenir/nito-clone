<?xml version="1.0" encoding="UTF-8"?>

<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ToolBar?>
<?import org.controlsfx.control.BreadCrumbBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextField?>
<?import common.NumberedEditor?>

<VBox minWidth="400" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.view.preparation.MainController">

	<fx:define>
		<ImageView fitHeight="38.0" preserveRatio="true" fx:id="icon_home">
			<image>
				<Image url="/icon_home.PNG"/>
			</image>
		</ImageView>
		<ImageView fitHeight="38.0" preserveRatio="true" fx:id="icon_listView">
			<image>
				<Image url="/icon_listView.PNG"/>
			</image>
		</ImageView>
		<ImageView fitHeight="38.0" preserveRatio="true" fx:id="icon_otherView">
			<image>
				<Image url="/icon_otherView.png"/>
			</image>
		</ImageView>
	</fx:define>

	<!-- MENU -->
	<MenuBar useSystemMenuBar="true">
		<Menu text="File">
			<Menu text="New">
				<MenuItem text="Exam" />
				<MenuItem text="Exam Instructions" />
				<MenuItem text="..." />
			</Menu>
		</Menu>
		<Menu text="Edit">
			<MenuItem text="..." />
		</Menu>
		<Menu text="Window">
			<MenuItem text="..." />
		</Menu>
		<Menu text="Help">
			<MenuItem text="..." />
		</Menu>
	</MenuBar>
	
	<!-- TOOLBAR -->
	<ToolBar>
		<Button text="Tool"/>
		
		<Separator />
		<Pane HBox.hgrow="ALWAYS" />
		
		<BreadCrumbBar fx:id="breadCrumb"/>
		
		<Pane HBox.hgrow="ALWAYS" />
		<Separator />
		
		<Button graphic="$icon_home"/>
		<Button graphic="$icon_listView"/>
		<Button graphic="$icon_otherView"/>
	</ToolBar>
	
	<!-- MAIN -->
	<SplitPane dividerPositions="0.20f" VBox.vgrow="ALWAYS">
	
		<!-- EXAMS TREE -->
		<TreeView minWidth="100">
			<TreeItem value="Exams" expanded="true" fx:id="examTree">
			</TreeItem>
		</TreeView>
		
		<!-- EDITOR -->
		<TabPane minWidth="300">
			<Tab text="Question 1">
			<NumberedEditor />
			</Tab>
		</TabPane>
		
	</SplitPane>
</VBox>


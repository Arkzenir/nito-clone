<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import net.miginfocom.layout.AC?>

<Dialog headerText="Create a new exam" title="New Exam" xmlns:fx="http://javafx.com/fxml/1">

<fx:define>
		<ImageView fitWidth="60.0" preserveRatio="true" fx:id="icon">
			<image>
				<Image url="/icon_plus.PNG"/>
			</image>
		</ImageView>
</fx:define>

	<dialogPane>
		<DialogPane prefHeight="300" prefWidth="600" graphic="$icon">
			<!-- Dialog icon -->
	 	   <!-- Dialog content -->
		    <content>
			    <MigPane cols="[][grow][][grow][]" rows="push[]push[]push">
					<Label text="Title:" MigPane.cc="left"/>
					<TextField MigPane.cc="grow, span, wrap"/>
					
					<Label text="Length:" MigPane.cc="left"/>
					<Spinner MigPane.cc="grow, width 100"/>
					<Label text="hour(s)" />
					<Spinner MigPane.cc="grow, width 100"/>
					<Label text="minute(s)" />
				</MigPane>
			</content>
			
			<!-- Dialog buttons -->
			<buttonTypes>
				<ButtonType fx:constant="OK"/>
				<ButtonType fx:constant="CANCEL" />
			</buttonTypes>
		</DialogPane>
	</dialogPane>
</Dialog>